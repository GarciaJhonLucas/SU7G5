// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  name String
  email String
  password String
  last_session Int
  created_at DateTime @default(now())
  date_born DateTime
}


model Songs  {
  id Int @id @default(autoincrement())
  name String
  artist String
  album String
  year Int
  genre String
  duration Int
}

model Playlist{
  id Int @id @default(autoincrement())
  name String
  user  Int //Users @relation(fields: [user_id], references: [id])
  user_id Int
  //Songs Songs[]
}
